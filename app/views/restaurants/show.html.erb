<h1><%= @restaurant.name.titleize %></h1>

<div>
  <%= @restaurant.name.titleize %><br>
  <% if @restaurant.image_url.present? %>
    <%= image_tag(@restaurant.image_url) %>
  <% end %>
</div><br>
<div>
  <u>Locations:</u>
  <% if @restaurant.addresses.present? %>
    <ul>
      <% @restaurant.addresses.each do |address| %>
        <li>
          <%= full_address(address) %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <strong>
      <p>There are no locations listed.<p>
    </strong>
  <% end %>
</div>
<div>
  -<%= link_to "Add Location", new_restaurant_address_path(@restaurant.id) %><br>
  -<%= link_to "New Post", new_restaurant_post_path(@restaurant.id) %>
</div>
<div>
  <h3><%= "#{@restaurant.name.titleize} Posts" %></h3>
  <ul>
    <% @restaurant.posts.each do |post| %>
      <li>
        <%= link_to "#{post.title.titleize} ID: #{post.id}",
         restaurant_post_path(@restaurant.id, post.id) %>
      </li>
    <% end %>
  </ul>
</div>
